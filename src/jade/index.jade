extends partials/layout

block head
  title Hull - Dashboard

block content
  

  //- Content
  .app
    h1 Hull Dashboard

    section.hull-init-section.js-hull-init-section
      h2.js-hull-init-title Init Hull
      form.js-hull-init-form
        fieldset
          input#hull-init-appid.js-hull-init-appid(type="text", placeholder="App ID", value="540587fddd2ca9fb3c000bf3")
          input#hull-init-orgurl.js-hull-init-orgurl(type="text", placeholder="Org URL", value="https://835b18df.hullapp.io")
        fieldset
          button.btn.js-init-hull Init Hull app

    section.hull-settings-section.js-hull-settings-section.none
      h2 Settings
      form.js-hull-settings-form
        .form-elements-container.js-hull-settings-container
        fieldset.form-button-container
          button.btn Create new setting
        fieldset
          button.btn Save settings


